{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "es2021",
    "module": "ESNext",
    "allowJs": false,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/__tests__", "**/*.test.ts"],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../node_modules/bc-stubs/bc/**/*.d.ts"
  ]
}
